---
layout: layouts/base.njk
title: NHS login help centre
---
<section class="nhsuk-hero">
  <div class="nhsuk-width-container nhsuk-hero--border">
    <div class="nhsuk-grid-row">
      <div class="nhsuk-grid-column-two-thirds">
        <div class="nhsuk-hero__wrapper">
          <h1 class="nhsuk-u-margin-bottom-3">NHS login help centre</h1>
          <p class="nhsuk-body-l nhsuk-u-margin-bottom-0">Insert search function here.</p>
        </div>
      </div>
    </div>
  </div>
</section>
<div class="nhsuk-width-container">
  <main class="nhsuk-main-wrapper" id="maincontent" role="main">
    <div class="nhsuk-grid-row">
      <div class="nhsuk-grid-column-full">
        <div class="nhsuk-grid-row nhsuk-panel-group nhsuk-u-margin-bottom-0">
          {%- for post in collections.sortedCategories -%}
            <div class="nhsuk-grid-column-one-half nhsuk-panel-group__item nhsuk-u-margin-0">
              <div class="nhsuk-promo">
                <a class="nhsuk-promo__link-wrapper" href="{{ post.url | url }}">
                  <div class="nhsuk-promo__content">
                    <h2 class="nhsuk-promo__heading">{{post.data.title}}</h2>
                    <p class="nhsuk-promo__description">
                      {{ post.data.subtitle }}</p>
                  </div>
                </a>
              </div>
            </div>
          {%- endfor -%}
        </div>
        <div class="nhsuk-u-reading-width">
          <p class="nhsuk-u-margin-bottom-0">
            </p>
        </div>
      </div>
    </div>
  </main>
</div>